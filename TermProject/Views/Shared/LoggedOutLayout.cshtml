<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" type="text/css">
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-sm navbar-dark bg-black">
        <div class="container">
            <a href="#" class="navbar-brand mb-0 h1 font-weight-bold" style="font-size: 2rem; font-family: 'Comic Sans MS'">
                <img class="d-inline-block align-top" src="~/css/logohearts.png" height="50" width="50" />
                Love Lounge
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active" style="font-size: 1.25rem; font-family: 'Comic Sans MS'">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index" id="lnkHome">Home</a>
                    </li>
                </ul>
            </div>
        </div>
        <form asp-controller="Home" asp-action="RedirectLogin" method="post">
            <button type="submit" id="btnLogin" class="btn btn-danger">Login</button>
        </form>

        <form asp-controller="Home" asp-action="RedirectSignUp" method="post">
            <button type="submit" id="btnSignup" class="btn btn-danger m-3">Sign-up</button>
        </form>
    </nav>

    <div class="container">
        @RenderBody() 
    </div>

    <footer class="bg-dark">
        <div class="container text-light text-center">
            <h5 class="p-5 mb-3">Copyright © 2024 Love Lounge. All rights reserved.</h5>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <link href="~/css/content.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-sm navbar-dark bg-black">
        <div class="container">
            <a href="#" class="navbar-brand mb-0 h1 font-weight-bold" style="font-size: 2rem; font-family: 'Comic Sans MS'">
                <img class="d-inline-block align-top" src="~/css/logohearts.png" height="50" width="50" />
                Love Lounge
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link active" asp-controller="Dashboard" asp-action="Index" id="lnkHome">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Main" asp-action="Index" id="lnkMain">
                            Search
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Likes" asp-action="Index" id="lnkLikes">
                            Likes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Matches" asp-action="Index" id="lnkMatches">
                            Matches
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Dates" asp-action="Index" id="lnkDates">
                            Dates
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="UserDateRequests" asp-action="Index" id="lnkDateRequests">
                            Date Requests
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="EditProfile" asp-action="Index" id="lnkProfile">
                            Edit Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="My2048" asp-action="Index" id="lnk2048">
                            2048
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <form asp-controller="Logout" asp-action="Index" method="post">
            <button type="submit" id="btnLogOut" class="btn btn-danger m-3">Log Out</button>
        </form>
    </nav>


    @RenderBody()
    @RenderSection("Scripts", required: false)
</body>
</html>

@{
    ViewData["Title"] = "Login";
}

@{
    Layout = "LoginLayout";
}




<div class="center-div">
    <div class="centered-content">
        <h2 style="color:darkred;">Welcome!</h2>

        <!-- view bag if username and password is invalid-->
        @if (ViewBag.Invalid != null)
        {
            <div style="color:red">
                @ViewBag.Invalid
            </div>
        }

        <!-- LOGIN FORM-->
        <form asp-controller="Login" asp-action="Login" method="post">
            <br />
            <label for="username"> Username: </label>
            <input type="text" id="txtUsername" name="username" value="@(Model != null ? Model.UserName : "")" />
            <br />
            <label for="password"> Password: </label>
            <input type="password" id="txtPassword" name="password" value="" />
            <br />
            <input type="checkbox" id="chkRememberMe" name="rememberMe" checked="on" />
            <label for="chkRememberMe"> Remember Me </label>
            <br />
            <br />
            <button type="submit" id="btnLogin" class="btn btn-danger">Login</button>
            <br />
        </form>
        <br />
        <!-- FORGOT USERNAME/PASSWORD -->
        <form asp-controller="Login" method="post" asp-action="RedirectForgotPassword">
            <div>
                <p>Forgot your Password?</p>
                <button type="submit" id="btnForgotPassword" class="btn btn-dark">Click Here</button>
            </div>

        </form>
        <br />
        <!-- CREATE ACCOUNT FORM -->
        <p>Dont have an account?</p>
        <form asp-controller="Home" asp-action="RedirectSignUp" method="post">
            <button type="submit" id="btnSignUp" class="btn btn-info" style="color:white">Sign Up</button>
        </form>
        <br />
    </div>
</div>


<footer class="bg-dark">
    <div class="container text-light text-center">
        <h5 class="p-3 mb-3">Copyright © 2024 Love Lounge. All rights reserved.</h5>
    </div>
</footer>

